<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="challengeandroid2018.iteam.com.challengeandroid_2018">
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ModeActivity" />
        <activity android:name=".activities.GameOverActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activities.ScoreActivity" />
        <activity android:name=".activities.GameActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activities.CreditsActivity" />
    </application>

</manifest>